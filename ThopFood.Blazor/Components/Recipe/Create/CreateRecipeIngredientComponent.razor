<MudSimpleTable Dense="true" Hover="true" Elevation="0" Square="true" Style="overflow-x: auto;">
    <tbody>
        @foreach (var (recipeIngredient, index) in RecipeIngredients.Select((value, index) => (value, index + 1)))
        {
            <tr>
                <td>
                    @index
                </td>
                <td>
                    @recipeIngredient.Ingredient.Name
                </td>
                <td>
                    @recipeIngredient.Amount
                </td>
                <td>
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small"></MudIconButton>
                </td>
            </tr>
        }
    </tbody>
</MudSimpleTable>
<MudGrid>
    <MudItem xs="6">
        <MudAutocomplete T="@ThopFood.Blazor.Models.Ingredient" Label="Ingredient" @bind-Value="@Ingredient" @ref="AutoComplete" SearchFunc="Search" ToStringFunc="@(i => i.Name)" ResetValueOnEmptyText="@(true)" />
    </MudItem>
    <MudItem xs="3">
        <MudTextField Label="Number" HelperText="Amount"
                  @bind-Value="NewNumber"/>
    </MudItem>
    <MudItem xs="3">
        <MudCardActions>
            <MudButton OnClick="OnSubmit" ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Next</MudButton>
        </MudCardActions>
    </MudItem>

</MudGrid>