<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            @if (Loaded)
            {
                <MudText Typo="@Typo.h6">@Profile.Name</MudText>
            }
            else
            {
                <MudSkeleton SkeletonType="SkeletonType.Text" Width="40%"></MudSkeleton>
            }
        </CardHeaderContent>
        <CardHeaderActions>
            @if (!Loaded)
            {
                <MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="100px" Height="24px;"></MudSkeleton>
            }
            else if (Profile.Following)
            {
                <MudButton Variant="Variant.Outlined" Size="Size.Small" Color="Color.Secondary" OnClick="FollowButton">Following</MudButton>
            }
            else
            {
                <MudButton Variant="Variant.Filled" Size="Size.Small" Color="Color.Primary" OnClick="FollowButton">Follow</MudButton>
            }
        </CardHeaderActions>
    </MudCardHeader>

    <MudCardContent>

        <MudGrid Justify="Justify.SpaceAround" Spacing="0">
            <MudItem>
                @if (Loaded)
                {
                    <MudAvatar Class="extra-large" Color="Profile.Color">@Profile.Name.FirstOrDefault()</MudAvatar>
                }
                else
                {
                    <MudSkeleton SkeletonType="SkeletonType.Circle" Class="extra-large"></MudSkeleton>
                }
            </MudItem>
            <MudItem Class="d-flex align-center">
                @if (Loaded)
                {
                    <MudText Typo="@Typo.h6">@Profile.UserName</MudText>
                }
                else
                {
                    <MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="75px"></MudSkeleton>
                }
            </MudItem>
            <MudDivider Vertical="true" FlexItem="true"/>
        
                <MudItem xs="6" Class="d-flex  justify-center align-center">
                @if (Loaded)
                {
                    <MudGrid Justify="Justify.SpaceAround" Spacing="0">
                        <MudItem>
                            <MudText Typo="Typo.h6">@Profile.Followers Followers</MudText>

                            <MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="100px;" Height="15px;"></MudSkeleton>

                        </MudItem>
                        <MudItem>

                            <MudRating Color="Color.Secondary" ReadOnly="true" Size="Size.Large" SelectedValue="@Profile.Rating"/>

                        </MudItem>
                        <MudItem>

                            <MudText Typo="Typo.body1">Out of @Profile.RatingCount reviews</MudText>

                        </MudItem>
                    </MudGrid>
                }
                else
                {
                    <MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="100%" Height="100%"></MudSkeleton>
                }
                </MudItem>
      
        </MudGrid>
    </MudCardContent>

</MudCard>